@using Newtonsoft.Json;
@using Shopee.Service.DTOs.Categories;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopee.Front</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shopee.Front.styles.css" asp-append-version="true" />
</head>
<body>
    <header >
        <nav style="background-color: #776BCC;" class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class=" container-fluid container ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Admin</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul style="margin-left:500px; color:#fff;" class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-ligth" asp-area="" asp-controller="User" asp-action="Products">Products</a>
                        </li>
                    </ul>
                </div>
                <a style="color:aliceblue;" class="nav-link text-ligth" asp-area="" asp-controller="User" asp-action="Cart">Cart</a>
                <a style="color:aliceblue;" class="nav-link text-ligth" asp-area="" asp-controller="User" asp-action="Question">Give Question</a>
                <a style="color:aliceblue;" class="nav-link text-ligth" asp-area="" asp-controller="User" asp-action="Account">Account</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Shopee.Front - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
